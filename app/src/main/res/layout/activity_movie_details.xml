<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.a01caffeinelabs.moviesapi.MovieDetails">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView_moviedetails_image"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@android:drawable/ic_menu_camera"
            android:layout_marginBottom="6dp"
            android:layout_gravity="center_horizontal"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Nombre"
            android:gravity="center_horizontal"
            android:textSize="25sp"
            android:textStyle="bold"
            android:layout_margin="5dp"/>
        <TextView
            android:id="@+id/textView_moviedetails_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Movie's Name"
            android:textSize="25sp"
            android:layout_marginBottom="6dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="DescripciÃ³n"
            android:gravity="center_horizontal"
            android:textSize="25sp"
            android:textStyle="bold"
            android:layout_margin="5dp"/>

        <TextView
            android:id="@+id/textView_moviedetails_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Movie's Description "
            android:textSize="25sp"
            android:layout_marginBottom="6dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Director"
            android:gravity="center_horizontal"
            android:textSize="25sp"
            android:textStyle="bold"
            android:layout_margin="5dp"/>
        <TextView
            android:id="@+id/textView_moviedetails_director"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Movie's Director"
            android:textSize="25sp"
            android:layout_marginBottom="6dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Categoria"
            android:gravity="center_horizontal"
            android:textSize="25sp"
            android:textStyle="bold"
            android:layout_margin="5dp"/>

        <TextView
            android:id="@+id/textView_moviedetails_category"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Movie's Category"
            android:textSize="25sp"
            android:layout_marginBottom="6dp"/>



    </LinearLayout>
</ScrollView>
